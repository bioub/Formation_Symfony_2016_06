{% extends "::base.html.twig" %}

{% block title %}{{ contact.prenom }} {{ contact.nom }}{% endblock %}

{% block body %}
<h2>Afficher un contact</h2>
<p>
    <b>Prénom :</b> {{ contact.prenom }}
</p>

<p>
    <b>Nom :</b> {{ contact.nom }}
</p>

{% if contact.email %}
<p>
    <b>Email :</b> {{ contact.email }}
</p>
{% endif %}

{% if contact.dateNaissance %}
<p>
    <b>Date de naissance :</b> {{ contact.dateNaissance | date('d/m/Y') }}
</p>
{% endif %}

{% if contact.societe %}
<p>
    <b>Société :</b> {{ contact.societe.nom }}
</p>
{% endif %}

{% if contact.groupes|length %}
<p>
    <b>Groupes :</b>
    {% for groupe in contact.groupes %} 
    <span class="label label-default">{{groupe.nom}}</span>
    {% endfor %}
</p>
{% endif %}

{% endblock %}
